
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>NBA预测注册后台</title>
    <link rel="stylesheet" href="~/layui/css/layui.css">
    <link rel="stylesheet" href="~/layui/css/main.css">
    <script type="application/javascript" src="~/layui/layui.js"></script>
    <script type="application/javascript" src="~/layui/jquery.js"></script>
    <script type="application/javascript" src="~/layui/jquery.validate.js"></script>
    <script type="application/javascript" src="~/layui/jquery.form.js"></script>
</head>
<body class="manage-login-body">
    <div class="manage-loginpage layui-anim">
        <img class="manage-login-log" src="">
        <h1>NBA预测注册</h1>
        <form class="layui-form" method="post" action="/Account/SignIn" id="signForm">
            <div class="layui-form-item manage-loginpage-input">
                <input type="text" name="username"  required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
            </div>

            <div class="layui-form-item manage-loginpage-input">
                <input type="password" name="password"  required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-form-item manage-loginpage-input">
                <input type="email" name="email"   required lay-verify="required" placeholder="请输入邮箱" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-form-item manage-loginpage-input">
                <button type="submit"  class="layui-btn">注册</button>
            </div>

        </form>
    </div>

    <script type="text/javascript">
        var layer;
        $().ready(function () {

            layui.use('layer',
                function () {
                    layer = layui.layer;
                })
            $('#signForm').validate({
                rules: {
                    username: {
                        required: true
                    },
                    password: {
                        required: true
                    }
                },
                messages: {
                    username: {
                        required: "请输入用户名"
                    },
                    password: {
                        required: "请输入密码"
                    }
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                },
                submitHandler: function (form) {
                    layer.load(0, { shade: false });
                    $(form).ajaxSubmit(function (res) {
                        if (res.code == 1) {
                            window.location = '/Account/Index';
                        } else {
                            layer.msg("注册失败", { icon: 5 });
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>

