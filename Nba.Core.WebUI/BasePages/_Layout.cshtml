@using Nba.Core.Models.Entites
@{
    UserInfo user = ViewData["user"] as UserInfo;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/layui/css/layui.css">
    <link rel="stylesheet" href="~/layui/css/main.css">
    <link rel="stylesheet" href="//cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
    <script type="text/javascript" src="~/layui/layui.js"></script>
    <script type="text/javascript" src="~/layui/jquery.js"></script>
    <script src="https://unpkg.com/vue/dist/vue.js"></script>
    <script src="https://cdn.staticfile.org/axios/0.18.0/axios.min.js"></script>
</head>
<body class="layui-layout-body" leftmargin=0 topmargin=0 oncontextmenu='return false' ondragstart='return false' onselectstart='return false' onbeforecopy='return false'>
    <div class="layui-layout layui-layout-admin">
        <!-- 头部区域 -->
        <div class="layui-header">
            <div class="layui-logo">NBA预测系统</div>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">@(user != null ? user.Name : "")</a>
                    <dl class="layui-nav-child">
                        <dd><a href="javascript:;" onclick="basemsg()">基本资料</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item">
                    <a href="/Account/LoginOut">退出</a>
                </li>
            </ul>
        </div>
        <!-- 侧边栏 -->
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
            </div>
        </div>

        <!-- 内容区域 -->
        <div class="layui-body">
            @RenderBody()
        </div>

        <!-- 底部固定区域 -->
        <div class="layui-footer">
            © NBA预测 - @DateTime.Now.Year
        </div>
    </div>
    <script>
        var layer
        layui.use('layer', function () {
            layer = layui.layer;
        });
        var basemsg = function () {
            layer.open({
                type: 2,
                title: '个人信息',
                shadeClose: true,
                shade: 0.8,
                area: ['200px', '20%'],
                content: '/Users/UserMessage'
            });
        }
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>